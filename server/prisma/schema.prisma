generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model IntelligenceUnit {
  id              String         @id @default(uuid())
  category        String         // Laptop, Desktop, Phone, Accessory
  cpu             String?
  gpu             String?
  ram             String?
  storage         String?
  metadata        String?        // JSON string to hold non-PC specs (e.g. { "batteryHealth": "90%", "mileage": "1200km" })
  condition       String         // New, Used
  minPrice        Int
  avgPrice        Int
  maxPrice        Int
  dealThreshold   Int
  confidenceScore Int            // e.g., 0-100 based on # of listings
  status          String         @default("PENDING") // PENDING, APPROVED, REJECTED
  proofUrl        String?        // Link to cloud storage showing proof of prices
  lastUpdated     DateTime       @default(now())
  productLinks    ProductLink[]

  // Removed unique constraint as optional fields + metadata make uniqueness too complex for MVP.
  // We will rely on Admin deduplication.
}

model ProductLink {
  id                 String           @id @default(uuid())
  url                String
  price              Int?
  intelligenceUnitId String
  intelligenceUnit   IntelligenceUnit @relation(fields: [intelligenceUnitId], references: [id], onDelete: Cascade)
  createdAt          DateTime         @default(now())
}

model User {
  id                 String      @id @default(uuid())
  email              String      @unique
  password           String?     // Optional for OAuth users
  role               String      @default("subscriber") // "admin", "worker", "subscriber"
  isSubscribed       Boolean     @default(false)
  subscriptionExpiry DateTime?   // Timestamp when subscription ends
  provider           String      @default("email") // "email", "google", "facebook"
  providerId         String?     // ID from the OAuth provider
  createdAt          DateTime    @default(now())
  flipAssets         FlipAsset[] // One-to-many relationship for portfolio tracking
}

enum FlipStatus {
  BOUGHT
  REPAIRING
  READY_TO_SELL
  LISTED
  NEGOTIATING
  SOLD
}

model FlipAsset {
  id                     String     @id @default(uuid())
  userId                 String
  user                   User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Basic Info
  brand                  String
  model                  String
  cpu                    String?
  ram                    String?
  storage                String?
  gpu                    String?
  condition              String     // e.g. "Good", "Needs repair", "Missing charger"
  
  // Purchase Info
  purchasePrice          Int
  purchaseDate           DateTime   @default(now())
  sellerSource           String?    // e.g. "Ouedkniss", "Marketplace", "Local Shop"
  repairCost             Int        @default(0)
  upgradeCost            Int        @default(0)
  
  // Resale Plan
  targetResalePrice      Int
  minimumAcceptablePrice Int
  platformListedOn       String?    // e.g. "Ouedkniss", "Facebook Groups"
  listingDate            DateTime?
  
  // Sale Info
  soldPrice              Int?
  saleDate               DateTime?
  extraCosts             Int        @default(0) // e.g. Delivery, commissions
  
  // Status Tracking
  status                 FlipStatus @default(BOUGHT)
  createdAt              DateTime   @default(now())
  updatedAt              DateTime   @updatedAt
}
